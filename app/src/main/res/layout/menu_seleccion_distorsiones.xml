<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<TextView
    android:id="@+id/tituloDC"
    android:layout_width="match_parent"
    android:layout_height="59dp"
    android:text="@string/distorsionesCognitivasTitle"
    android:textSize="34sp" />

<Space
    android:id="@+id/espacioTitulo_Dist"
    android:layout_width="match_parent"
    android:layout_height="50dp" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <RadioButton
        android:id="@+id/radio_catastrof_DC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/catastrofizacionTitle" />

    <RadioButton
        android:id="@+id/radio_prediccion_DC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prediccionFuturoTitle" />

    <RadioButton
        android:id="@+id/radio_remocional_DC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/razonamientoEmocionalTitle" />
</LinearLayout>
</LinearLayout>